extends layout

block content
  h1= title
  h1= categories

  form(method='POST' action='')
    div.form-group
      label(for='name') Title:
      input#name.form-control(type='text', placeholder='Item Name' name='name' required='true' value=(undefined===item ? '' : item.name) )
    div.form-group
      label(for='category') Category:
      select#category.form-control(type='select', placeholder='Select category' name='category' required='true' )
        for category in categories
          if item
            option(value=category._id selected=(category._id.toString()===item.category._id.toString() ? 'selected' : false) ) #{category.name}
          else
            option(value=category._id) #{category.name}
    div.form-group
      label(for='price') Price:
      textarea#price.form-control(type='textarea', placeholder='Price' name='price' required='true') #{undefined===item ? '' : item.price}
    div.form-group
      label(for='number') Number:
      input#number.form-control(type='text', placeholder='Number' name='number' value=(undefined===item ? '' : item.number) required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
